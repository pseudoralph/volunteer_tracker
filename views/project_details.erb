
  <nav class="navbar navbar-light bg-light nav-styling" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Projects</li>
    </ol>
  </nav>

  <div class="proj-title">
    <h3><%= @project.title %></h3>
    <small><a href="#" data-toggle="modal" data-target="#exampleModal">Edit Project</a></small>

  </div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Rename project</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">

          <form id='rename-project' action="/projects/<%= @project.id %>/rrrrrrrr" method="post">
            <input type="hidden" name="_method" value="patch">
            <div class="form-group">
              <input type="text" class="form-control" id="title" name="title" placeholder="New title">
            </div>


        </div>
        <div class="modal-footer" style="border-top: 0;">
          <a href="#" class="btn btn-primary" onclick="document.getElementById('rename-project').submit()">Update Project</a>
          <!-- <button type="submit" class="btn btn-primary" hidden>Update Project</button> -->
        </div>
        </form>
      </div>
    </div>
  </div>


<div class="row">
  <div class="col-md-5">

    <div class="card">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">Volunteers on this project</th>
          </tr>
        </thead>
        <tbody>
          <% @volunteers.each do |volunteer| %>
          <% if volunteer.project_id.to_i == @project.id %>
          <tr>
            <td>
              <a href="/volunteer/<%=volunteer.id%>/"><%= volunteer.name %></a>
            </td>
          </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>

  <div class="col-md-5">

    <div class="card">
      <form class="" action="/volunteer/<%= @project.id %>/assign" method="post">
        <input type="hidden" name="_method" value="patch">

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">Available volunteers</th>
            <th scope="col"><button class="btn btn-primary btn-sm" type="submit" name="button">Add</button></th>
          </tr>
        </thead>
        <tbody>
          <% @volunteers.each do |volunteer| %>
          <% if volunteer.project_id.to_i == 0 %>
          <tr>
            <td><a href="/volunteer/<%=volunteer.id%>/"><%= volunteer.name %></a></td>
            <td style="text-align: center;"><input class="form-check-input" type="checkbox" value="<%=volunteer.id%>" name="volunteer_ids[]"></td>
          </tr>
          <% end %>
          <% end %>

        </tbody>
      </table>


    </form>
    </div>

  </div>

</div>




<div class="delete-project">

  <form action="/projects/<%= @project.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">

    <div class="form-group ">
      <button type="submit" class="btn btn-danger">Delete Project</button>
    </div>
  </form>

</div>
